---
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'

import ShowcaseMediaCard from './ShowcaseMediaCard.astro'

export type ShowcaseImageCardProps = Props

interface Props {
  description?: string
  href: string
  thumbnail: Promise<{ default: ImageMetadata }>
  title: string
}

const { description, href, thumbnail, title } = Astro.props

const imageImport = await thumbnail
const src = imageImport.default
---

<ShowcaseMediaCard {href} {title} {description}>
  <Image {src} alt="" width="400" />
</ShowcaseMediaCard>
