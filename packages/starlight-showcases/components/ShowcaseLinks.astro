---
import { CardGrid } from '@astrojs/starlight/components'

import ShowcaseLinkCard, { type ShowcaseLinkCardProps } from './ShowcaseLinkCard.astro'

export type ShowcaseLinksProps = Props

interface Props {
  links: ShowcaseLinkCardProps[]
}

const { links } = Astro.props
---

<CardGrid>
  {links.map((link) => <ShowcaseLinkCard {...link} />)}
</CardGrid>
